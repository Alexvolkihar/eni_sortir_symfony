{% extends 'base.html.twig' %}

{% block title %}Modifier le profil
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-2 sm:px-6 lg:px-8">


		<div class="flex justify-center items-center">
			<form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
				<h1 class="text-center mb-6 text-3xl font-extrabold text-gray-900">Modifier mon profil</h1>

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm) }}
				<div class="mb-4">
					{{ form_row(registrationForm.email, {
                    'attr': {
                        'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Email'
                    }
                }) }}
				</div>
				<div class="mb-4">
					{{ form_row(registrationForm.plainPassword, {
                    'label': 'Mot de passe',
                    'required': false,
                    'attr': {
                        'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Mot de passe'
                    }
                }) }}
				</div>
				<div class="mb-4">
					{{ form_row(registrationForm.name, {
                    'label': 'Prénom',
                    'attr': {
                        'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Prénom'
                    }
                }) }}
				</div>
				<div class="mb-4">
					{{ form_row(registrationForm.lastname, {
                    'label': 'Nom',
                    'attr': {
                        'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Nom'
                    }
                }) }}
				</div>
				<div class="mb-4">
					{{ form_row(registrationForm.phone, {
                    'label': 'Téléphone',
                    'attr': {
                        'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Téléphone'
                    }
                }) }}
				</div>
				<div class="mb-4">
					{{ form_row(registrationForm.pseudo, {
                    'label': 'Pseudo',
                    'attr': {
                        'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Adresse'
                    }
                }) }}
				</div>
				<div class="mb-4">
					{{ form_row(registrationForm.site, {
                    'label': 'Site',
                    'attr': {
                        'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Site'
                    }
                }) }}
				</div>


				<input type="hidden" name="_csrf_token" value="{{ csrf_token('registration') }}">

				<div class="flex items-center justify-between text-white font-bold">
					<button class="bg-blue-500 hover:bg-blue-700  py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
						Enregistrer
					</button>
					<button class="bg-red-500 hover:bg-red-700 py-2 px-4 rounded focus:outline-none focus:shadow-outline">
						<a href="{{ path('profile_index') }}">Annuler</a>
					</button>
				</div>
				{{ form_end(registrationForm) }}
			</form>
		</div>
	{% endblock %}
