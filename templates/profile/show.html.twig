{% extends 'base.html.twig' %}

{% block body %}
	<div class="w-full flex justify-start items-start mt-32">
        <img src="../../assets/img/sortirImg.png" alt="Dummy image" class="w-1/3 my-auto text-center rounded">
        <div class="w-1/3 px-8">
			<h1 class="text-lg text-center font-bold mb-8">
				{{ app.user.pseudo }}
			</h1>
			<div class="flex justify-between mb-2">
				<p class="font-bold">Prénom :</p>
				<p>{{ user.name }}</p>
			</div>
			<div class="flex justify-between mb-2">
				<p class="font-bold">Nom de famille :</p>
				<p>{{ user.lastname }}</p>
			</div>
			<div class="flex justify-between mb-2">
				<p class="font-bold">Téléphone :</p>
				<p>{{ user.phone }}</p>
			</div>
			<div class="flex justify-between mb-2">
				<p class="font-bold">Email:</p>
				<p>{{ user.email }}</p>
			</div>
			<div class="flex justify-between mb-6">
				<p class="font-bold">Ville de rattachement:</p>
				<p>{{ app.user.site.name }}</p>
			</div>
				{% if app.user == user %}
				<button class="bg-gray-700 border-4 border-y-indigo-200 border-x-indigo-500 text-white rounded-md px-5 py-2 text-md font-medium m-auto hover:bg-gray-600 inline-block mr-4" type="submit">
					<a href="{{ path('profile_edit') }}">Editer profil</a>
					<button>
				{% endif %}
				<button class="bg-gray-700 border-4 border-y-indigo-200 border-x-indigo-500 text-white rounded-md px-5 py-2 text-md font-medium m-auto hover:bg-gray-600 inline-block">
					<a href="{{ path('events_index') }}">Retour</a>
				</button>
		</div>
	</div>
{% endblock %}
