{% extends 'base.html.twig' %}
{% block title %}
	{% if app.user == user %}
		Mon profil
	{% else %}
		Profil de {{user.pseudo}}
	{%endif %}
{% endblock %}
{% block body %}
	<section class="w-full flex flex-col lg:flex-row justify-start items-start mt-32">
        {% if app.user.avatar %}
            <img src="{{ asset('/img/avatar/' ~ app.user.avatar) }}" alt="{{app.user.avatar}}" class="w-1/3 my-auto text-center rounded">
        {% else %}
            <img src="{{ asset('/img/sortirImg.png') }}" alt="Dummy image" class="w-1/3 my-auto text-center rounded">
        {% endif %}
        <div class="w-full md:min-w-fit md:4/5 lg:w-1/3 px-8">
			<h1 class="text-2xl text-center font-bold mb-8">
				{{ user.pseudo }}
			</h1>
			<div class="flex justify-between mb-2">
				<p class="font-bold">Prénom :</p>
				<p>{{ user.name }}</p>
			</div>
			<div class="flex justify-between mb-2">
				<p class="font-bold">Nom de famille :</p>
				<p>{{ user.lastname }}</p>
			</div>
			<div class="flex justify-between mb-2">
				<p class="font-bold">Téléphone :</p>
				<p>{{ user.phone }}</p>
			</div>
			<div class="flex justify-between mb-2">
				<p class="font-bold">Email:</p>
				<p>{{ user.email }}</p>
			</div>
			<div class="flex justify-between mb-6">
				<p class="font-bold">Ville de rattachement:</p>
				<p>{{ app.user.site.name }}</p>
			</div>
			<div class="flex flex-wrap justify-around">
				{% if app.user == user %}
				<button class="bg-gray-700 border-4 border-y-indigo-200 border-x-indigo-500 text-white rounded-md px-5 py-2 text-md font-medium m-auto hover:bg-gray-600 mr-4" type="submit">
					<a href="{{ path('profile_edit') }}">Editer profil</a>
				<button>
				{% endif %}
				<button class="bg-gray-700 border-4 border-y-indigo-200 border-x-indigo-500 text-white rounded-md px-5 py-2 text-md font-medium m-auto hover:bg-gray-600">
					<a href="{{ path('events_index') }}">Retour</a>
				</button>
			</div>
		</div>
	</section>
{% endblock %}
