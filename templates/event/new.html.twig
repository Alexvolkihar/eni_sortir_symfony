{% extends 'base.html.twig' %}

{% block title %}Créer un événement
{% endblock %}

{% block body %}
<section class="w-full flex items-start lg:mt-32 mt-10">
	{{ form_start(eventCreateForm, {'attr' : {'class': 'w-1/3 m-auto text-center md:min-w-fit lg:max-w-fit'}}) }}
		<h1 class="text-2xl font-bold mb-8 text-center">Créer une sortie</h1>
		<div class="mb-2 flex justify-between">
			{{ form_label(eventCreateForm.name, 'Nom de la sortie :', {'label_attr' : {'class':'font-bold'}})}}
			{{ form_widget(eventCreateForm.name, {'attr': {'class': 'shadow border rounded py-2 px-3 text-gray-700 leading-tight focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Nom de l\'événement'}}) }}
		</div>
		<div class="mb-2 flex justify-between">
			{{ form_label(eventCreateForm.startDateTime, 'Date & heure de début :', {'label_attr' : {'class':'font-bold'}})}}
				{{ form_widget(eventCreateForm.startDateTime, {'attr': {'class': 'shadow border rounded py-2 px-3 text-gray-700 leading-tight focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Date et heure de début'}}) }}
		</div>
		<div class="mb-2 flex justify-between">
			{{ form_label(eventCreateForm.subDateLimit, 'Date limite d\'inscription :', {'label_attr' : {'class':'font-bold'}})}}
				{{ form_widget(eventCreateForm.subDateLimit, {'attr': {'class': 'shadow border rounded py-2 px-3 text-gray-700 leading-tight focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Date limite d\'inscription'}}) }}
		</div>
		<div class="mb-2 flex justify-between">
				{{ form_label(eventCreateForm.duration, 'Durée de la sortie :', {'label_attr' : {'class':'font-bold'}})}}
				{{ form_widget(eventCreateForm.duration, {'attr': {'class': 'shadow border rounded py-2 px-3 text-gray-700 leading-tight focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Durée de l\'événement'}}) }}
		</div>
		<div class="mb-2 flex justify-between">
			{{ form_label(eventCreateForm.nbMaxSub, 'Nombre maximum de participants :', {'label_attr' : {'class':'font-bold'}})}}
			{{ form_widget(eventCreateForm.nbMaxSub, {'attr': {'class': 'shadow border rounded py-2 px-3 text-gray-700 leading-tight focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Nombre maximum de participants'}}) }}
		</div>

		<div class="mb-2 flex justify-between">
			{{ form_label(eventCreateForm.eventInfo, 'Description & Informations :', {'label_attr' : {'class':'font-bold'}})}}
			{{ form_widget(eventCreateForm.eventInfo, {'attr': {'class': 'shadow border rounded py-2 px-3 text-gray-700 leading-tight focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Description et informations'}}) }}
		</div>
		<div class="mb-2 flex justify-between">
			{{ form_label(eventCreateForm.place, 'Lieu :', {'label_attr' : {'class':'font-bold'}})}}
			{{ form_widget(eventCreateForm.place, {'attr': {'class': 'ax-w-1/2 break-word white-space-pre shadow border rounded py-2 px-3 text-gray-700 leading-tight focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Lieu de l\'événement'}}) }}
		</div>
		<div class="mb-6 flex justify-between ">
			{{ form_label(eventCreateForm.site, 'Ville de rattachement :', {'label_attr' : {'class':'font-bold'}})}}
			{{ form_widget(eventCreateForm.site, {'attr': {'class': 'mshadow border rounded py-2 px-3 text-gray-700 leading-tight focus:ring-indigo-500 focus:border-indigo-500', 'placeholder': 'Site organisateur'}}) }}
		</div>
		<button type="submit" class="bg-gray-700 border-4 border-y-indigo-200 border-x-indigo-500 text-white rounded-md px-5 py-2 text-md font-medium mr-4 hover:bg-gray-600">Créer</button>
		{{ form_end(eventCreateForm) }}
</section>
{% endblock %}
